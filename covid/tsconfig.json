{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "outDir": "./dist",
    "moduleResolution": "node",
    "lib": ["ES6", "DOM", "DOM.Iterable"],
    "noImplicitAny": true,
    "typeRoots": ["./node_modules", "./types"],
    "strict": true,
    "strictFunctionTypes": true
  },
  "include": ["./src/**/*"]
}
